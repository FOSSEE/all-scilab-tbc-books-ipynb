			"## Example 3.4_3: Projection_onto_a_plane.sci"
		   ]
		  },
  {
"cell_type": "code",
	   "execution_count": null,
	   "metadata": {
	    "collapsed": true
	   },
	   "outputs": [],
"source": [
"//page 175\n",
"clear;\n",
"close;\n",
"clc;\n",
"disp('If we project b=(x,y,z) onto the x-y plane then its projection is p=(x,y,0),and is the sum of projection onto x- any y-axes.')\n",
"b=rand(3,1);\n",
"q1=[1;0;0];\n",
"disp(q1,'q1=');\n",
"q2=[0;1;0];\n",
"disp(q2,'q2=');\n",
"P=q1*q1'+q2*q2';\n",
"disp(P,'Overall projection matrix,P=');\n",
"disp('and,P[x;y;z]=[x;y;0]')\n",
"disp('Projection onto a plane=sum of projections onto orthonormal q1 and q2.')\n",
"//end"
   ]
   }
