"//page 166\n",
"clear;\n",
"close;\n",
"clc;\n",
"disp('y=C+Dt');\n",
"disp('Ax=b');\n",
"A=[1 -3;1 0;1 3];\n",
"disp(A,'A=');\n",
"y=rand    (3,1);\n",
"disp(y,'y=');\n",
"disp('the columns of A are orthogonal,so')\n",
"x=zeros(1,2);\n",
"disp(([1 1 1]*y)/(A(:,1)'*A(:,1)),'C^ =');\n",
"disp(([-3 0 3]*y)/(A(:,2)'*A(:,2)),'D^ =')\n",
"disp('C^ gives the besy fit ny horizontal line, whereas D^t is the best fit by a straight line through the origin.')\n",
