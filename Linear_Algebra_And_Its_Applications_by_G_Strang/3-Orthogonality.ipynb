		   "source": [
			"## Example 3.4_5: Gram_Schmidt_process.sci"
		   ]
		  },
  {
"cell_type": "code",
	   "execution_count": null,
	   "metadata": {
	    "collapsed": true
	   },
	   "outputs": [],
"source": [
"//page 166\n",
"clear;\n",
"close;\n",
"clc;\n",
"A=[1 0 1;1 0 0;2 1 0];//independent vectors stored in columns of A\n",
"disp(A,'A=');\n",
"[m,n]=size(A);\n",
"for k=1:n\n",
"    V(:,k)=A(:,k);\n",
"    for j=1:k-1\n",
"        R(j,k)=V(:,j)'*A(:,k);\n",
"        V(:,k)=V(:,k)-R(j,k)*V(:,j);\n",
"    end\n",
"    R(k,k)=norm(V(:,k));\n",
"    V(:,k)=V(:,k)/R(k,k);\n",
"end\n",
"disp(V,'Q=')"
   ]
   }
