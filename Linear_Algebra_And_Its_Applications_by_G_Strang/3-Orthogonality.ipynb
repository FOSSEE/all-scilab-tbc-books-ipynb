			"## Example 3.4_1: Orthogonal_matrices.sci"
		   ]
		  },
  {
"cell_type": "code",
	   "execution_count": null,
	   "metadata": {
	    "collapsed": true
	   },
	   "outputs": [],
"source": [
"//page 175\n",
"clear;\n",
"close;\n",
"clc;\n",
"thetha=45;//Taking some value for thetha.\n",
"Q=[cos(thetha) -sin(thetha);sin(thetha) cos(thetha)];\n",
"disp(Q,'Q=');\n",
"disp(Q','Q''=inv(Q)=');\n",
"disp('Q rotates every vector through an angle thetha, and Q'' rotates it back through -thetha.The columns are clearly orthogonal and they are orthonormal because sin^2(theta)+cos^2(thetha)=1.');\n",
"//end"
   ]
   }
,
