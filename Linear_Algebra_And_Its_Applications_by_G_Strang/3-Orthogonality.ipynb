"source": [
"//page 175\n",
"clear;\n",
"close;\n",
"clc;\n",
"disp('Any permutation matrix is an orthogonal matrix.The columns are certainly unit vectors and certainly orthogonal-because the 1 appears in a differnt place in each column')\n",
"P=[0 1 0;0 0 1;1 0 0];\n",
"disp(P,'P=');\n",
"disp(P','inv(P)=P''=');\n",
"disp(P'*P,'And,P''*P=');\n",
"//end"
   ]
   }
