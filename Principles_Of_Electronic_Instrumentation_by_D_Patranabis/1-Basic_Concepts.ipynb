		   "source": [
			"## Example 1.6: find_shunt_resistance.sce"
		   ]
		  },
  {
"cell_type": "code",
	   "execution_count": null,
	   "metadata": {
	    "collapsed": true
	   },
	   "outputs": [],
"source": [
"//chapter1,Example1_6,pg 482\n",
"\n",
"Rm=1000//meter resistance\n",
"\n",
"Is=900*10^-6//shunt current\n",
"\n",
"Vm=100*10^-3//drop across meter\n",
"\n",
"Rs=Vm/Is//ohm's law\n",
"\n",
"It=1*10^-3\n",
"\n",
"//Is=It*(Rm/(Rs+Rm))\n",
"\n",
"Rs=(Rm*(It-Is))/Is\n",
"\n",
"printf('\nshunt resistance\n')\n",
"\n",
"printf('\nRs=%.2f ohm',Rs)"
   ]
   }
,
