	   "metadata": {
	    "collapsed": true
	   },
	   "outputs": [],
"source": [
"//chapter1,Example1_7,pg 483\n",
"\n",
"If=100*10^-6//full scale current\n",
"\n",
"Rm=1000//meter resistance\n",
"\n",
"Vf=10//full scale voltage\n",
"\n",
